<?xml version="1.0" encoding="utf-8"?>
<s:TitleWindow xmlns:fx="http://ns.adobe.com/mxml/2009" 
			   xmlns:s="library://ns.adobe.com/flex/spark" 
			   xmlns:mx="library://ns.adobe.com/flex/mx" 
			   width="400" height="300"
			   creationComplete="on_creation_complete(event)"
>
<fx:Script>
<![CDATA[
	import mx.events.CloseEvent;
	import mx.events.FlexEvent;
	import mx.managers.PopUpManager;


protected function on_creation_complete(event:FlexEvent):void
{
	addEventListener(CloseEvent.CLOSE, on_close);
	
}

public function close_event(event:Event):void
{
	dispatchEvent(new CloseEvent(CloseEvent.CLOSE));
}
	
protected function on_close(event:CloseEvent):void
{
	removeEventListener(CloseEvent.CLOSE, on_close);
	PopUpManager.removePopUp(this);
}

	
	
]]>
</fx:Script>
<mx:VBox id="area" width="100%" height="100%" >
	<mx:VBox id="holder" width="100%" height="100%" />
	<mx:HBox id="ctrl" width="100%" />
</mx:VBox>
<fx:Declarations>
</fx:Declarations>
</s:TitleWindow>
